---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;

// Premium: leer en runtime desde el servidor (Docker/env) para que el cliente lo use
const isPremium = typeof process !== 'undefined' && process.env
  ? (process.env.PUBLIC_FEATURE_PREMIUM === 'true' || process.env.PUBLIC_APP_EDITION === 'premium')
  : false;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <script is:inline define:vars={{ isPremium }}>
      window.__SPRINTIVA_PREMIUM__ = isPremium;
    </script>
    <slot />
  </body>
</html>

